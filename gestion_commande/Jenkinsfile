pipeline {
    agent {
        label 'agent-windows'
    }

    stages {

        stage('Checkout') {
            steps {
                checkout([
                    $class: 'GitSCM',
                    branches: [[name: '*/main']],
                    userRemoteConfigs: [[
                        url: 'https://github.com/faty-mbengue/gestion-commande-backend.git',
                        credentialsId: 'tokenguitup'
                    ]]
                ])
            }
        }

        stage('Compile') {
            steps {
                dir('gestion_commande') {
                    bat 'mvnw.cmd clean compile'
                }
            }
        }

        stage('Test') {
            steps {
                dir('gestion_commande') {
                    bat 'mvnw.cmd test'
                }
            }
        }

        stage('Package') {
            steps {
                dir('gestion_commande') {
                    bat 'mvnw.cmd clean package -DskipTests'
                }
            }
        }
    }
}
