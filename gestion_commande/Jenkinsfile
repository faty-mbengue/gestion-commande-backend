pipeline {
    agent any  // ou 'agent-windows' si vous l'avez configuré

    stages {
        // Étape 1: Récupération du code
        stage('Checkout') {
            steps {
                checkout([
                    $class: 'GitSCM',
                    branches: [[name: '*/master']],
                    userRemoteConfigs: [[
                        url: 'https://github.com/faty-mbengue/gestion-commande-backend.git',
                        credentialsId: 'tokenguitup'
                    ]]
                ])
            }
        }

        // Étape 2: Tests unitaires Maven
        stage('Run Unit Tests') {
            steps {
                bat 'mvn test'
            }

            post {
                success {
                    echo '✅ Tous les tests unitaires ont réussi'
                }
                failure {
                    echo '❌ Certains tests ont échoué'
                    // Le pipeline s'arrêtera automatiquement en cas d'échec
                }
            }
        }
    }

    post {
        always {
            echo "Build #${BUILD_NUMBER} - Test du backend terminé"

            // Nettoyage
            cleanWs()
        }
    }
}